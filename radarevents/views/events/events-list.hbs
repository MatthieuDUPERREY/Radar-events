<h1>All our events</h1>

{{#each eventsArr}}
<section class="events-list">
  <h2>{{this.title}} {{this.location}}</h2>
  <p>
    {{this.dateAndTime}} <br />
    {{this.category}} <br />
    <a href="/events/{{this._id}}">More details</a> |
  </p>

  <a href="/events/create">Add Event</a>
</section>
{{/each}}
